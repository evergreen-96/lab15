[Unit]
Description=Automatically creates backup and sends it via scp
Wants=myBackuper.timer

[Service]
Type=oneshot
ExecStart=/usr/bin/bash /home/verbect/backup.sh /home/verbect/asd/ /home/verbect/ myBackup

[Install]
WantedBy=multi-user.target